{% extends 'base.html.twig' %}

{% block title %}{% trans %}titre_afficher_souris{% endtrans %}{% endblock %}

{% block body %}

    <a href="{{ path('app_liste_produits') }}" class="btn btn-outline-secondary">{% trans %}texte_btn_retour{% endtrans %}</a>

    {% if  souris is null %}
        <div>{% trans %}texte_warning_aucun_souris{% endtrans %}</div>
    {% else %}

        <div class="row">
            <div class="col-md-6 mb-4">                
                {% if souris.images is empty %}
                    <div class="alert alert-warning text-center p-5">
                        {% trans %}texte_warning_aucune_img{% endtrans %}
                    </div>
                {% else %}
                    <div id="carouselSouris" class="carousel slide shadow rounded" data-bs-ride="carousel" style="overflow: hidden;">        
                        <div class="carousel-inner">
                            {% for image in souris.images %}
                                <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                                    <img src="{{ asset('uploads/' ~ image.url) }}" 
                                        class="d-block w-100" 
                                        alt="Image {{ souris.nom }}"
                                        style="height: 400px; object-fit: cover;"
                                    >
                                </div>
                            {% endfor %}
                        </div>
                        {% if souris.images|length > 1 %}
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselSouris" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color: rgba(0,0,0,0.3); border-radius: 50%;"></span>
                                <span class="visually-hidden">Précédent</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselSouris" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true" style="background-color: rgba(0,0,0,0.3); border-radius: 50%;"></span>
                                <span class="visually-hidden">Suivant</span>
                            </button>
                        {% endif %}        
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6">
                <h1 class="mb-2">{{ souris.nom }}</h1>
                <h4 class="text-muted mb-4">{{ souris.marque }}</h4>
                <div class="fs-4 text-primary fw-bold mb-3">{{ souris.prix }} €</div>
                <p class="lead">{{ souris.description }}</p>
                <hr>
                <ul class="list-unstyled">
                    <li class="mb-2"><strong>{% trans %}texte_gestion_produit_stock{% endtrans %}</strong> 
                        {% if souris.stock > 0 %}
                            <span class="badge bg-success">{% trans %}texte_gestion_produit_stock_dispo{% endtrans %}({{ souris.stock }})</span>
                        {% else %}
                            <span class="badge bg-danger">{% trans %}texte_gestion_produit_stock_hs{% endtrans %}</span>
                        {% endif %}
                    </li>
                    <li class="mb-2"><strong>{% trans %}texte_gestion_produit_status{% endtrans %}</strong> {{ souris.status.value }}</li>
                    <li class="mb-2"><strong>{% trans %}texte_gestion_souris_connectivite{% endtrans %}</strong> {{ souris.connectivite }}</li>
                    <li class="mb-2"><strong>{% trans %}texte_gestion_souris_nbboutons{% endtrans %}</strong> {{ souris.NbBoutons }}</li>
                </ul>
                <div class="mt-4 d-flex gap-2">
                    {#bouton panier a ajouter#}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}