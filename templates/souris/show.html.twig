{% extends 'base.html.twig' %}

{% block title %}{% trans %}titre_afficher_souris{% endtrans %}{% endblock %}

{% block body %}

    {% if not is_granted('ROLE_ADMIN') %}
        <div>{% trans %}msg_acces_page_invalide{% endtrans %}</div>
    {% else %}

        <h1>{% trans %}titre_afficher_souris{% endtrans %}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>{% trans %}index_souris_id{% endtrans %}</th>
                    <td>{{ souri.id }}</td>
                </tr>
                <tr>
                    <th>{% trans %}index_souris_marque{% endtrans %}</th>
                    <td>{{ souri.marque }}</td>
                </tr>
                <tr>
                    <th>{% trans %}index_souris_nom{% endtrans %}</th>
                    <td>{{ souri.nom }}</td>
                </tr>
                <tr>
                    <th>{% trans %}index_souris_prix{% endtrans %}</th>
                    <td>{{ souri.prix }}</td>
                </tr>
                <tr>
                    <th>{% trans %}index_souris_description{% endtrans %}</th>
                    <td>{{ souri.description }}</td>
                </tr>
                <tr>
                    <th>{% trans %}index_souris_stock{% endtrans %}</th>
                    <td>{{ souri.stock }}</td>
                </tr>
                <tr>
                    <th>{% trans %}index_souris_status{% endtrans %}</th>
                    <td>{{ souri.status.value }}</td>
                </tr>
                <tr>
                    <th>{% trans %}index_souris_connectivite{% endtrans %}</th>
                    <td>{{ souri.connectivite }}</td>
                </tr>
                <tr>
                    <th>{% trans %}index_souris_nbbtn{% endtrans %}</th>
                    <td>{{ souri.NbBoutons }}</td>
                </tr>
                <tr>
                    <th>{% trans %}index_souris_images{% endtrans %}</th>
                    <td>
                        {% if souri.images is empty %}
                            <span class="text-muted">{% trans %}texte_warning_aucune_img2{% endtrans %}</span>
                        {% else %}
                            <div class="d-flex flex-wrap gap-3">
                                {% for image in souri.images %}
                                    <div class="card">
                                        <img src="{{ asset('uploads/' ~ souri.url) }}" 
                                             alt="Image du clavier" 
                                             class="img-fluid rounded"
                                             style="max-width: 200px; max-height: 200px; object-fit: cover;"
                                        >
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_souris_index') }}">{% trans %}texte_btn_retour{% endtrans %}</a>

        <a href="{{ path('app_souris_edit', {'id': souri.id}) }}">{% trans %}texte_btn_modifier{% endtrans %}</a>

        {{ include('souris/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
