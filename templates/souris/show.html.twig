{% extends 'base.html.twig' %}

{% block title %}Souris{% endblock %}

{% block body %}

    {% if not is_granted('ROLE_ADMIN') %}
        <div>Vous n'avez pas accès à cette page.</div>
    {% else %}

        <h1>Souris</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ souri.id }}</td>
                </tr>
                <tr>
                    <th>Marque</th>
                    <td>{{ souri.marque }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ souri.nom }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ souri.prix }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ souri.description }}</td>
                </tr>
                <tr>
                    <th>Stock</th>
                    <td>{{ souri.stock }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ souri.status.value }}</td>
                </tr>
                <tr>
                    <th>Connectivite</th>
                    <td>{{ souri.connectivite }}</td>
                </tr>
                <tr>
                    <th>NbBoutons</th>
                    <td>{{ souri.NbBoutons }}</td>
                </tr>
                <tr>
                    <th>Images</th>
                    <td>
                        {% if souri.images is empty %}
                            <span class="text-muted">Aucune image pour ce produit.</span>
                        {% else %}
                            <div class="d-flex flex-wrap gap-3">
                                {% for image in souri.images %}
                                    <div class="card">
                                        <img src="{{ asset('uploads/' ~ souri.url) }}" 
                                             alt="Image du clavier" 
                                             class="img-fluid rounded"
                                             style="max-width: 200px; max-height: 200px; object-fit: cover;"
                                        >
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_souris_index') }}">retour</a>

        <a href="{{ path('app_souris_edit', {'id': souri.id}) }}">modifier</a>

        {{ include('souris/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
