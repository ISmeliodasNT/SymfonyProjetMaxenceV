{% extends 'base.html.twig' %}

{% block title %}{% trans %}titre_index_souris{% endtrans %}{% endblock %}

{% block body %}

    {% if not is_granted('ROLE_ADMIN') %}
        <div>{% trans %}msg_acces_page_invalide{% endtrans %}</div>
    {% else %}

        <h1>{% trans %}titre_index_souris{% endtrans %}</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>{% trans %}index_souris_id{% endtrans %}</th>
                    <th>{% trans %}index_souris_marque{% endtrans %}</th>
                    <th>{% trans %}index_souris_nom{% endtrans %}</th>
                    <th>{% trans %}index_souris_prix{% endtrans %}</th>
                    <th>{% trans %}index_souris_description{% endtrans %}</th>
                    <th>{% trans %}index_souris_stock{% endtrans %}</th>
                    <th>{% trans %}index_souris_status{% endtrans %}</th>
                    <th>{% trans %}index_souris_connectivite{% endtrans %}</th>
                    <th>{% trans %}index_souris_nbbtn{% endtrans %}</th>
                    <th>{% trans %}index_souris_images{% endtrans %}</th>
                    <th>{% trans %}index_souris_actions{% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
            {% for souri in souris %}
                <tr>
                    <td>{{ souri.id }}</td>
                    <td>{{ souri.marque }}</td>
                    <td>{{ souri.nom }}</td>
                    <td>{{ souri.prix }}</td>
                    <td>{{ souri.description }}</td>
                    <td>{{ souri.stock }}</td>
                    <td>{{ souri.status.value }}</td>
                    <td>{{ souri.connectivite }}</td>
                    <td>{{ souri.NbBoutons }}</td>
                    <td>
                        {% if souri.images is empty %}
                            <span class="text-danger">{% trans %}texte_warning_aucune_img{% endtrans %}</span>
                        {% else %}
                            <div style="display: flex; gap: 5px;">
                                {% for image in souri.images %}
                                    <img src="{{ asset('uploads/' ~ image.url) }}"
                                         alt="Image de la souri {{ souri.nom }}" 
                                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;"
                                    >
                                {% endfor %}
                            </div>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_souris_show', {'id': souri.id}) }}">{% trans %}texte_btn_afficher{% endtrans %}</a>
                        <a href="{{ path('app_souris_edit', {'id': souri.id}) }}">{% trans %}texte_btn_modifier{% endtrans %}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">{% trans %}texte_warning_aucun_souris{% endtrans %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_souris_new') }}">{% trans %}texte_btn_creer_souris{% endtrans %}</a>

    {% endif %}
{% endblock %}
