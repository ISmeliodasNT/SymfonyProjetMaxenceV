{% extends 'base.html.twig' %}

{% block title %}Clavier{% endblock %}

{% block body %}

    {% if not is_granted('ROLE_ADMIN') %}
        <div>Vous n'avez pas accès à cette page.</div>
    {% else %}

        <h1>Clavier</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ clavier.id }}</td>
                </tr>
                <tr>
                    <th>Marque</th>
                    <td>{{ clavier.marque }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ clavier.nom }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ clavier.prix }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ clavier.description }}</td>
                </tr>
                <tr>
                    <th>Stock</th>
                    <td>{{ clavier.stock }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ clavier.status.value }}</td>
                </tr>
                <tr>
                    <th>Switch</th>
                    <td>{{ clavier.switch }}</td>
                </tr>
                <tr>
                    <th>Language</th>
                    <td>{{ clavier.language }}</td>
                </tr>
                <tr>
                    <th>Images</th>
                    <td>
                        {% if clavier.images is empty %}
                            <span class="text-muted">Aucune image pour ce produit.</span>
                        {% else %}
                            <div class="d-flex flex-wrap gap-3">
                                {% for image in clavier.images %}
                                    <div class="card">
                                        <img src="{{ asset('uploads/' ~ image.url) }}" 
                                             alt="Image du clavier" 
                                             class="img-fluid rounded"
                                             style="max-width: 200px; max-height: 200px; object-fit: cover;"
                                        >
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_clavier_index') }}">retour</a>

        <a href="{{ path('app_clavier_edit', {'id': clavier.id}) }}">modifier</a>

        {{ include('clavier/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
