{% extends 'base.html.twig' %}

{% block title %}Clavier index{% endblock %}

{% block body %}

    {% if not is_granted('ROLE_ADMIN') %}
        <div>Vous n'avez pas accès à cette page.</div>
    {% else %}

        <h1>Clavier index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Marque</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Description</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Switch</th>
                    <th>Language</th>
                    <th>Images</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for clavier in claviers %}
                <tr>
                    <td>{{ clavier.id }}</td>
                    <td>{{ clavier.marque }}</td>
                    <td>{{ clavier.nom }}</td>
                    <td>{{ clavier.prix }}</td>
                    <td>{{ clavier.description }}</td>
                    <td>{{ clavier.stock }}</td>
                    <td>{{ clavier.status.value }}</td>
                    <td>{{ clavier.switch }}</td>
                    <td>{{ clavier.language }}</td>
                    <td>
                        {% if clavier.images is empty %}
                            <span class="text-danger">Aucune image</span>
                        {% else %}
                            <div style="display: flex; gap: 5px;">
                                {% for image in clavier.images %}
                                    <img src="{{ asset('uploads/' ~ image.url) }}"
                                         alt="Image du clavier {{ clavier.nom }}" 
                                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;"
                                    >
                                {% endfor %}
                            </div>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_clavier_show', {'id': clavier.id}) }}">afficher</a>
                        <a href="{{ path('app_clavier_edit', {'id': clavier.id}) }}">modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_clavier_new') }}">Créer un nouveau clavier</a>

    {% endif %}

{% endblock %}
