{% extends 'base.html.twig' %}

{% block title %}{{ 'admin_commande_detail_titre_page'|trans({'%id%': commande.id}) }}{% endblock %}

{% block body %}


    {% if not is_granted('ROLE_ADMIN') %}
        <div>{{ 'msg_acces_page_invalide'|trans }}</div>
    {% else %}

    <div class="container mt-4">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">{{ 'titre_commande_numero'|trans({'%id%': commande.id}) }}</h1>
            <a href="{{ path('app_admin_commande_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> {{ 'btn_retour_liste'|trans }}
            </a>
        </div>

        <div class="row">
            
            <div class="col-md-4">
                
                <div class="card shadow-sm mb-4 border-primary">
                    <div class="card-header bg-primary text-white fw-bold">{{ 'titre_section_etat'|trans }}</div>
                    <div class="card-body">
                        <p class="mb-2">{{ 'label_etat_actuel'|trans }} <strong>{{ ('status.' ~ commande.etat)|trans }}</strong></p>
                        
                        <form action="{{ path('app_admin_commande_status', {'id': commande.id}) }}" method="post">
                            <label class="form-label small text-muted">{{ 'label_changer_statut'|trans }}</label>
                            <div class="input-group">
                                <select name="etat" class="form-select">
                                    {% for etat in ['EN_ATTENTE', 'PAYEE', 'EXPEDIEE', 'LIVREE', 'ANNULEE'] %}
                                        <option value="{{ etat }}" {{ commande.etat == etat ? 'selected' : '' }}>
                                            {{ ('status.' ~ etat)|trans }}
                                        </option>
                                    {% endfor %}
                                </select>
                                <button class="btn btn-primary" type="submit">{{ 'btn_valider_court'|trans }}</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light fw-bold">{{ 'titre_section_client'|trans }}</div>
                    <div class="card-body">
                        <h5 class="card-title">{{ commande.user.nom|upper }} {{ commande.user.prenom }}</h5>
                        <p class="mb-1"><a href="mailto:{{ commande.user.email }}">{{ commande.user.email }}</a></p>
                        <p class="text-muted small">{{ 'label_id_client'|trans }} {{ commande.user.id }}</p>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light fw-bold">{{ 'titre_section_livraison'|trans }}</div>
                    <div class="card-body">
                        <p class="mb-0">
                            {{ commande.adresseLivraison.rue }}<br>
                            {{ commande.adresseLivraison.codePostal }} {{ commande.adresseLivraison.ville }}
                        </p>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light fw-bold">{{ 'titre_section_paiement'|trans }}</div>
                    <div class="card-body">
                        {{ 'texte_carte_masquee'|trans({'%number%': commande.cartePaiement.number|slice(-4)}) }}
                    </div>
                </div>

            </div>

            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white d-flex justify-content-between">
                        <span>{{ 'titre_section_contenu'|trans({'%count%': commande.detailCommandes|length}) }}</span>
                        <span>{{ 'label_date_commande'|trans }} {{ commande.dateCommande|date('d/m/Y H:i') }}</span>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>{{ 'col_produit'|trans }}</th>
                                    <th class="text-center">{{ 'col_prix_unitaire'|trans }}</th>
                                    <th class="text-center">{{ 'col_qte'|trans }}</th>
                                    <th class="text-end">{{ 'col_total'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for detail in commande.detailCommandes %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                {% if detail.produit.images is not empty %}
                                                    <img src="{{ asset('uploads/' ~ detail.produit.images[0].url) }}" 
                                                        alt="Img" 
                                                        class="rounded border me-3"
                                                        style="width: 40px; height: 40px; object-fit: cover;">
                                                {% else %}
                                                    <div class="bg-secondary rounded me-3" style="width: 40px; height: 40px;"></div>
                                                {% endif %}
                                                <div>
                                                    <div class="fw-bold">{{ detail.produit.nom }}</div>
                                                    <small class="text-muted">{{ 'label_ref_produit'|trans }} {{ detail.produit.id }}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">{{ detail.prixUnitaire|number_format(2, ',', ' ') }} €</td>
                                        <td class="text-center fw-bold">{{ detail.quantite }}</td>
                                        <td class="text-end">{{ (detail.prixUnitaire * detail.quantite)|number_format(2, ',', ' ') }} €</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold text-uppercase">{{ 'label_total_commande'|trans }}</td>
                                    <td class="text-end fw-bold fs-5 text-primary">{{ commande.total|number_format(2, ',', ' ') }} €</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}