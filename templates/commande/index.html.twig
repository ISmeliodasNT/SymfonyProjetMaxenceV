{% extends 'base.html.twig' %}

{% block title %}{{ 'titre_page_mes_commandes'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>{{ 'titre_page_mes_commandes'|trans }}</h1>

    {% if commandes is empty %}
        <div class="alert alert-info mt-4">
            {{ 'msg_aucune_commande_historique'|trans }} 
            <a href="{{ path('app_liste_produits') }}">{{ 'lien_commencer_achats'|trans }}</a>.
        </div>
    {% else %}
        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>{{ 'col_reference'|trans }}</th>
                        <th>{{ 'col_date'|trans }}</th>
                        <th>{{ 'label_etat'|trans }}</th>
                        <th>{{ 'col_montant'|trans }}</th>
                        <th>{{ 'col_actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td><strong>#{{ commande.id }}</strong></td>
                            <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                            <td>
                                {% set badgeClass = 'secondary' %}
                                {% if commande.etat == 'EN_ATTENTE' %}
                                    {% set badgeClass = 'warning text-dark' %}
                                {% elseif commande.etat == 'PAYEE' %}
                                    {% set badgeClass = 'success' %}
                                {% endif %}

                                <span class="badge bg-{{ badgeClass }}">
                                    {{ ('status.' ~ commande.etat)|trans }}
                                </span>
                            </td>
                            <td class="fw-bold">{{ commande.total|number_format(2, ',', ' ') }} â‚¬</td>
                            <td>
                                <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-sm btn-primary">
                                    {{ 'btn_voir_details'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}