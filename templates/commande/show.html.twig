{% extends 'base.html.twig' %}

{% block title %}{{ 'titre_commande_numero'|trans({'%id%': commande.id}) }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ 'titre_commande_numero'|trans({'%id%': commande.id}) }}</h1>
        <a href="{{ path('app_commande_index') }}" class="btn btn-outline-secondary">{{ 'btn_retour_liste'|trans }}</a>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-light fw-bold">{{ 'titre_informations'|trans }}</div>
                <div class="card-body">
                    <p><strong>{{ 'label_date_commande'|trans }}</strong> {{ commande.dateCommande|date('d/m/Y H:i') }}</p>
                    <p><strong>{{ 'label_etat'|trans }}</strong> {{ ('status.' ~ commande.etat)|trans }}</p>
                    <p><strong>{{ 'label_total'|trans }}</strong> <span class="text-primary fw-bold">{{ commande.total|number_format(2, ',', ' ') }} €</span></p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-light fw-bold">{{ 'titre_section_livraison'|trans }}</div>
                <div class="card-body">
                    <p>{{ commande.adresseLivraison.rue }}</p>
                    <p>{{ commande.adresseLivraison.codePostal }} {{ commande.adresseLivraison.ville }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-light fw-bold">{{ 'titre_section_paiement'|trans }}</div>
                <div class="card-body">
                    <p>{{ 'label_carte_bancaire'|trans }}</p>
                    <p>**** **** **** {{ commande.cartePaiement.number|slice(-4) }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-dark text-white">{{ 'titre_contenu_commande'|trans }}</div>
        <ul class="list-group list-group-flush">
            {% for detail in commande.detailCommandes %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        {% if detail.produit.images is not empty %}
                            <img src="{{ asset('uploads/' ~ detail.produit.images[0].url) }}" 
                                 alt="{{ detail.produit.nom }}" 
                                 class="rounded me-3" 
                                 style="width: 50px; height: 50px; object-fit: cover;">
                        {% endif %}
                        <div>
                            <div class="fw-bold">{{ detail.produit.nom }}</div>
                            <small class="text-muted">{{ 'label_prix_unitaire'|trans }} {{ detail.prixUnitaire|number_format(2, ',', ' ') }} €</small>
                        </div>
                    </div>
                    <div class="text-end">
                        <div>x {{ detail.quantite }}</div>
                        <div class="fw-bold">{{ (detail.prixUnitaire * detail.quantite)|number_format(2, ',', ' ') }} €</div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}