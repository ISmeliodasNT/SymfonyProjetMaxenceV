{% extends 'base.html.twig' %}

{% block title %}{% trans %}titre_admin_users{% endtrans %}{% endblock %}

{% block body %}

    {% if not is_granted('ROLE_ADMIN') %}
        <div>{% trans %}msg_acces_page_invalide{% endtrans %}</div>
    {% else %}

    <h1>{% trans %}titre_admin_users{% endtrans %}</h1>

    <a href="{{ path('app_admin_utilisateur_new') }}" class="btn btn-primary mb-3">
        {% trans %}btn_creer_user{% endtrans %}
    </a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>{% trans %}admin_user_index_id{% endtrans %}</th>
                <th>{% trans %}admin_user_index_email{% endtrans %}</th>
                <th>{% trans %}admin_user_index_nom_prenom{% endtrans %}</th>
                <th>{% trans %}admin_user_index_roles{% endtrans %}</th>
                <th>{% trans %}admin_user_index_actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.nom }} {{ user.prenom }}</td>
                <td>
                    {% for role in user.roles %}
                        <span class="badge bg-secondary">{{ role }}</span>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_admin_utilisateur_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">
                        {% trans %}texte_btn_modifier{% endtrans %}
                    </a>
                    
                    <form method="post" action="{{ path('app_admin_utilisateur_delete', {'id': user.id}) }}" style="display:inline-block" onsubmit="return confirm('{{ 'confirmer_suppression'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-sm btn-danger">{% trans %}texte_btn_supprimer{% endtrans %}</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{% trans %}admin_user_aucun_user{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}