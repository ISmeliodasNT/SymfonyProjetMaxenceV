{% extends 'base.html.twig' %}

{% block title %}{{ titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>{{ titre }}</h1>
    <div class="row">
        <div class="col-md-6">
            {{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
    
                {{ form_errors(form) }}
                
                {{ form_row(form.number) }}
                {{ form_row(form.expirationDate) }}
                {{ form_row(form.cvv) }}

                <button type="submit" class="btn btn-success mt-3">{% trans %}btn_enregistrer_carte{% endtrans %}</button>
                <a href="{{ path('app_compte') }}" class="btn btn-secondary mt-3">{% trans %}btn_annuler{% endtrans %}</a>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}