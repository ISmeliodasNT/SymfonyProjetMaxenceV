{% extends 'base.html.twig' %}

{% block title %}{% trans %}titre_compte{% endtrans %}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">{% trans %}titre_compte{% endtrans %}</h2>
                </div>
                <div class="card-body">
                    
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <h4 class="card-title mb-4">{% trans %}texte_compte_information{% endtrans %}</h4>
                    
                    {{ form_start(form) }}
                        
                        {{ form_row(form.email) }}
                        
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.nom) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.prenom) }}
                            </div>
                        </div>

                        {{ form_row(form.adresse) }}

                        <div class="mt-3 mb-4">
                            <button type="submit" class="btn btn-success w-100">
                                {% trans %}texte_btn_maj{% endtrans %}
                            </button>
                        </div>

                    {{ form_end(form) }}

                    <hr>

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('accueil') }}" class="btn btn-warning">
                            {% trans %}texte_btn_retour{% endtrans %}
                        </a>
                        
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">
                            {% trans %}header_btn_deconnecter{% endtrans %}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}