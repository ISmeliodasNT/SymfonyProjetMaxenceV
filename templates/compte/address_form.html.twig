{% extends 'base.html.twig' %}

{% block title %}{{ titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>{{ titre }}</h1>

    <div class="row">
        <div class="col-md-6">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                
                <button type="submit" class="btn btn-success mt-3">
                    Enregistrer
                </button>
                <a href="{{ path('app_compte') }}" class="btn btn-secondary mt-3">
                    Annuler
                </a>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}