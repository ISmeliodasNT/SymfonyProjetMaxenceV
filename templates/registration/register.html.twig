{% extends 'base.html.twig' %}

{% block title %}{% trans %}texte_btn_inscription{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}texte_btn_inscription{% endtrans %}</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'texte_inscription_mdp'|trans
        }) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'texte_inscription_termes'|trans
        }) }}
        <button type="submit" class="btn btn-lg btn-primary">{% trans %}texte_btn_inscription{% endtrans %}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
